-- CPU usage widget
-- Initialize widget
mycpugraph = awful.widget.graph()
-- Graph properties
mycpugraph:set_width(50)
mycpugraph:set_background_color("#494B4F")
mycpugraph:set_color({ type = "linear",
                       from = { 0, 0 },
                       to = { 10,0 },
                       stops = {
                                 {0, "#FF5656"},
                                 {0.5, "#88A175"},
                                 {1, "#AECF96" }
                               }
                      })
-- Register widget
vicious.register(mycpugraph, vicious.widgets.cpu, "$1")